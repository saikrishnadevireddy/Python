
    print("Hey People! Welcome to Quote Generator")
    name=input("Enter your name ")
    age=int(input("Enter your age "))
    gender=input("Please mention your Gender(M/F) ")
    if gender=="M":
        if age in range (1,21):
            print("Hey!", name,", Life is like a box of chocolates. You never know what you're going to get")
        elif age in range (22,31):
            print("Hey!", name,", If you want to live a happy life, tie it to a goal, not to people or things")
        elif age in range (32, 41):
            print("Hey!", name, ", Be Kind, Have Grace, Give Thanks, Speak Love & Stay Swaggy")
        elif age in range(42, 51):
            print("Hey!", name, ", Do not pray for easy lives. Pray to be stronger men")
        else:
            print("Hey!", name,", You are more than what you were")
    
    elif gender=="F":
        if age in range (1,21):
            print("Hey!", name,", I like it when you smile, it's cute")
        elif age in range (22,31):
            print("Hey!", name,", You can make anything by writing")
        elif age in range (32, 41):
            print("Hey!", name, ", Choose to do more than just exist; choose to live")
        elif age in range(42, 51):
            print("Hey!", name, ", In a gentle way, you can shake the world")
        else:
            print("Hey!", name, ", It is never too early to begin exploring the world")

    else:
        print("Hey!", name, ", Beauty begins the moment you decide to be Yourself")
        
